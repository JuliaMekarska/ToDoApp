<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>ToDo App</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 50px;
            margin: 20px;
        }
        input, button {
            margin: 5px;
        }
        .completed {
            text-decoration: line-through;
            color: gray;
        }
        .contents {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .addButton {
            background-color: rgb(83, 170, 247);
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 15px;
            font-size: 16px;
            cursor: pointer;
            transition: transform 0.5s ease, background-color 0.5s ease;
        }
        .addButton:hover{
            transform: scale(1.3);
            background-color: rgb(140, 169, 194);
        }
        #taskInput {
            width: 200px;
            height: 50px;
            border-radius: 25px;
        }
        input::placeholder {
            margin-left: 20px;
        }
    </style>
</head>
<body>
    <div class="contents">
        <h1>ToDo App</h1>
        <div class="field">
            <input class="textField" type="text" id="taskInput" placeholder="New task">
            <button class="addButton" onclick="addToDo()">Dodaj</button>
        </div>
        <ul id="todoList"></ul>
    </div>
    <script>
        const API_URL = "/todos"; // Zmieniamy na "/todos", bo taka jest ≈õcie≈ºka w kontrolerze Spring

        // ≈Åadowanie listy zada≈Ñ
        async function loadToDos() {
            const res = await fetch(API_URL);
            const todos = await res.json();
            const list = document.getElementById("todoList");
            list.innerHTML = "";

            todos.forEach(todo => {
                const li = document.createElement("li");
                li.textContent = `${todo.name}`; // Zmieniamy na 'name' zgodnie z backendem
                if (todo.completed) li.classList.add("completed");

                // Przycisk do oznaczenia jako uko≈Ñczone
                const completeBtn = document.createElement("button");
                completeBtn.textContent = "‚úî";
                completeBtn.onclick = () => updateToDo(todo.id);

                // Przycisk do usuwania zadania
                const deleteBtn = document.createElement("button");
                deleteBtn.textContent = "üóë";
                deleteBtn.onclick = () => deleteToDo(todo.id);

                li.appendChild(completeBtn);
                li.appendChild(deleteBtn);

                list.appendChild(li);
            });
        }

        // Dodawanie zadania
        async function addToDo() {
            const task = document.getElementById("taskInput").value;
            if (!task.trim()) return;
            const taskObj = { name: task }; // Wysy≈Çamy obiekt z kluczem 'name'
            await fetch(API_URL, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(taskObj) // Przesy≈Çamy jako JSON obiekt
            });
            document.getElementById("taskInput").value = ""; // Czyszczenie pola po dodaniu
            loadToDos(); // Prze≈Çaduj listƒô zada≈Ñ
        }

        // Aktualizacja zadania (zmiana statusu 'completed')
        async function updateToDo(id) {
            await fetch(`${API_URL}/${id}`, { method: "PUT" });
            loadToDos(); // Prze≈Çaduj listƒô zada≈Ñ po aktualizacji
        }

        // Usuwanie zadania
        async function deleteToDo(id) {
            await fetch(`${API_URL}/${id}`, { method: "DELETE" });
            loadToDos(); // Prze≈Çaduj listƒô po usuniƒôciu zadania
        }

        // ≈Åadowanie listy zada≈Ñ na stronie
        loadToDos();
    </script>
</body>
</html>
